<%= link_to 'Add Pack', new_customer_pack_path(@customer), id: 'add-pack-link' %>

<%= form_with(model: @purchase, url: add_pack_customer_path(@customer)) do |form| %>
  <%= form.label :pack_id, "Pack" %>
  <%= form.collection_select :pack_id, @packs, :id, :name %>
  <%= form.submit "Save" %>
<% end %>
